<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextDisplayOne" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">@dimen/sp_80</item>
        <item name="android:paddingRight">@dimen/dp_20</item>
        <item name="android:gravity">bottom|right</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="TextDisplayThree" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">@dimen/sp_100</item>
        <item name="android:paddingRight">@dimen/dp_20</item>
        <item name="android:gravity">bottom|right</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="ButtonNumber" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">@dimen/sp_30</item>
        <item name="android:background">@color/color_white_button</item>
        <item name="android:layout_marginStart">@dimen/dp_1</item>
        <item name="android:layout_marginTop">@dimen/dp_1</item>
        <item name="android:layout_marginEnd">@dimen/dp_1</item>
        <item name="android:layout_marginBottom">@dimen/dp_1</item>
    </style>

    <style name="ButtonOperators" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">@dimen/sp_30</item>
        <item name="android:background">@color/color_orange</item>
        <item name="android:layout_marginStart">@dimen/dp_1</item>
        <item name="android:layout_marginTop">@dimen/dp_1</item>
        <item name="android:layout_marginEnd">@dimen/dp_1</item>
        <item name="android:layout_marginBottom">@dimen/dp_1</item>
    </style>

</resources>
